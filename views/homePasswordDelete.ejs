    <div class="bgDiv">

        <%- include('./partials/leftMenu.ejs') %>

        <div class="mainPage">
            <div class="mainTitle">Change Password</div>

            <form class="changeForm" action="/user/profile/password" method="post">
                <input class="myInput" id="password" name="password" required placeholder="Password">
                <input class="myInput" id="newPassword" name="newPassword" required placeholder="New Password">
                <input class="myInput" id="newPassword2" name="newPassword2" required placeholder="Confirm New Password">
                <input id="myIDInput" name="userID" style="display: none;">
                <button class="saveBtn">Change Password</button>
            </form>

            <div class="alertDiv">
                <i class="fa-solid fa-triangle-exclamation"></i>
                Password is wrong or confirmation differ from new password
                <i class="fa-solid fa-xmark"></i>  
            </div>
            
        </div>

    </div>

