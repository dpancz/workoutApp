<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Workout</title>
    <link rel="stylesheet" href="/public/css/goals/oneGoalShow.css">
    <link rel="stylesheet" href="/public/css/partialsCSS/leftMenu.css">
    <script src="https://kit.fontawesome.com/121f6f2b6c.js" crossorigin="anonymous"></script>
</head>
<body>

    <div class="bgDiv">

        <%- include('./partials/leftMenu.ejs') %>

        <div class="mainPage">

            <i class="fa-solid fa-trash"></i>

            <div class="deleteDiv">
                <div class="firstLineDelete">Are you sure you want to delete this goal?</div>
                <div class="secondLineDelete">You will lose it permanently</div>
                <div class="deleteButtonsDiv">
                    <div class="yesButton decisionBtn">Yes</div>
                    <div class="noButton decisionBtn">No</div>
                </div>
            </div>

            <div class="goalTitle"></div>
            
            <div class="goalCircle">
                <svg>
                    <circle cx="70" cy="70" r="70" class="goalCircleIn"></circle>
                </svg>
                <div class="percentNumber">0%</div>
                <div class="backgroundCircle"></div>
            </div>

            <div class="goalDiv goalDate">
                <div class="goalDateText">Date of start:</div>
                <div class="goalOutput goalDateOutput"></div>
            </div>

            <div class="markDoneDiv">
                Mark as done
                <i class="fa-solid fa-check"></i>
            </div>

        </div>

    </div>
    
    <script>

        let goalData = '<%- goalData %>';

        let id = '<%- id %>';

        let weightData = '<%- weightData %>';

        let workoutData = '<%- workoutData %>';
    </script>
    <script src="/public/js/partialsJS/leftMenu.js"></script>
    <script src="/public/js/goals/oneGoalShow.js"></script>

</body>
</html>