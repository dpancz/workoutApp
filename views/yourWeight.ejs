<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Workout</title>
    <link rel="stylesheet" href="/public/css/partialsCSS/statisticsLeftMenu.css">
    <link rel="stylesheet" href="/public/css/statistics/yourWeight.css">
    <script src="https://kit.fontawesome.com/121f6f2b6c.js" crossorigin="anonymous"></script>
</head>
<body>
    
    <div class="bgDiv">

        <%- include('./partials/statisticsLeftMenu.ejs') %>

        <div class="yourWeight">

            <div class="myChart">
                <canvas id="weightChart"></canvas>
            </div>

            <div class="addWeightBtn">Add Weight</div>

            <div class="lastMonthImprovement">
                <div class="lastMonthText">Last month: </div>
                <div class="monthImprovement">+0</div>
            </div>

            <div class="BMIcount">
                <div class="BMItext">Your BMI: </div>
                <div class="BMINumber">0</div>
            </div>

            <div class="addWeightDiv">
                <div class="closeBtn">
                    <i class="fa-solid fa-xmark"></i>
                </div>
                    <form class="newWeightForm" action="/statistics/yourWeight" method="post">
                        <input type="number" name="weightNumber" id="weightInput" placeholder="Weight" min="1" required>
                        <input type="text" name="userID" id="userID" required style="display: none;">
                        <button id="addWeightBtn">Add</button>
                    </form>
            </div>

        </div>
    </div>

    <script>
        let id = '<%- id %>';
        let data = '<%- data %>';
        let height = '<%- height %>';
    </script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/public/js/statistics/yourWeight.js"></script>
    <script src="/public/js/partialsJS/statisticsLeftMenu.js"></script>

</body>
</html>